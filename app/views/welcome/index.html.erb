<div class="row">
  <div class="col-sm-8">
    <% @articles.each do |article|  %>
        <div class="article_content">
          <h3><%= link_to article.title, article_path(article) %></h3>
          <p><%= article.content %></p>
        </div>
    <% end %>
  </div>

  <div class="col-sm-4">
    <div class="right_side">
      <h3>最新的评论</h3>
    </div>
  </div>
</div>